{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],

    "module": "ESNext",
    "moduleResolution": "Node",        // ðŸ‘ˆ switch from "bundler" to "Node"
    "types": ["node"],                 // ðŸ‘ˆ add Node type definitions
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
